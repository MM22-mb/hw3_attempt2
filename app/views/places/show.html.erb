<!-- Place details page -->

<h1><%= @place["name"] %></h1>

<h3>Entry</h3>

<ul>
  <% for entry in @entry %>
    <li>
      <a href="/entries/<%= entry["id"] %>">
        <%= entry["title"] %>
      </a>
    </li>
  <% end %>
</ul>

<p><a href="/places">Back to All Places</a></p>

<form action="/places/<%= @place["id"] %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <button>Delete Place</button>
</form>